<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TVPlayer1Score"
            android:text="@string/player1score"
            android:textSize="25sp"
            android:layout_marginTop="3sp"
            android:freezesText="true"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TVPlayer2Score"
            android:layout_below="@id/TVPlayer1Score"
            android:text="@string/player2score"
            android:textSize="25sp"
            android:layout_marginTop="3sp"
            android:freezesText="true"
        />

        <Button
            android:layout_centerVertical="true"
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:text="@string/resetBtn"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="normal"
            android:freezesText="true"
            android:background="@drawable/rounded_button"
        />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LinLay1"
        android:layout_gravity="center"
    >

    <Button
        android:id="@+id/btn_00"
        android:textSize="25sp"
        android:layout_height="85dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:freezesText="true"
    />
    <Button
        android:id="@+id/btn_01"
        android:textSize="25sp"
        android:layout_height="85dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:freezesText="true"
    />
    <Button
        android:id="@+id/btn_02"
        android:textSize="25sp"
        android:layout_height="85dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:freezesText="true"
     />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LinLay2"
        android:layout_gravity="center"
    >
    <Button
        android:id="@+id/btn_10"
        android:textSize="25sp"
        android:layout_height="85dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:freezesText="true"
        />
    <Button
        android:id="@+id/btn_11"
        android:textSize="25sp"
        android:layout_height="85dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:freezesText="true"
        />
    <Button
        android:id="@+id/btn_12"
        android:textSize="25sp"
        android:layout_height="85dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:freezesText="true"
        />

</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/LinLay3"
        android:layout_gravity="center"
    >

    <Button
        android:id="@+id/btn_20"
        android:textSize="25sp"
        android:layout_height="85dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:freezesText="true"
        />
    <Button
        android:id="@+id/btn_21"
        android:textSize="25sp"
        android:layout_height="85dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:freezesText="true"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/btn_22"
        android:textSize="25sp"
        android:layout_height="85dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textStyle="bold"
        android:freezesText="true"
    />


    </LinearLayout>




</LinearLayout>



